# Docker environment example for Project Monitor
# Copy this to .env and adjust values

# Backend Port (changed to 5001 to avoid conflicts)
PORT=5001

# Database Configuration (connects to shared PostgreSQL container)
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=project_management

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here

# Shared network name (if using existing postgres from another container)
SHARED_NETWORK_NAME=shared-network
